{
  "compilerOptions": {
    "target": "ESNext",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true
  },
  "include": [
    "*.ts",
    "./**/*.ts",
    "./**/**/*.ts"
  ],
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules"
  ]
}